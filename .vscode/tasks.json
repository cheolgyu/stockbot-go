{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build all",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "build api/logs",
                "build task/fetch",
                "build task/asmb/line",
                "build task/asmb/agg",
                "build ticker"
            ]
        },
        {
            "label": "build api/logs",
            "type": "shell",
            "options": {
                "env": {
                    "GOOS": "linux",
                    "GOARCH": "amd64"
                }
            },
            "command": " go build -o ${workspaceFolder}/bin/logs_srv ${workspaceFolder}/src/api/logs/main.go",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build task/fetch",
            "type": "shell",
            "options": {
                "env": {
                    "GOOS": "linux",
                    "GOARCH": "amd64"
                }
            },
            "command": "go build -o ${workspaceFolder}/bin/fetch ${workspaceFolder}/src/task/fetch/main.go",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build task/asmb/line",
            "type": "shell",
            "options": {
                "env": {
                    "GOOS": "linux",
                    "GOARCH": "amd64"
                }
            },
            "command": "go build -o ${workspaceFolder}/bin/asmb_line ${workspaceFolder}/src/task/asmb/line/main.go",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build task/asmb/agg",
            "type": "shell",
            "options": {
                "env": {
                    "GOOS": "linux",
                    "GOARCH": "amd64"
                }
            },
            "command": "go build -o ${workspaceFolder}/bin/asmb_agg ${workspaceFolder}/src/task/asmb/agg/main.go",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build ticker",
            "type": "shell",
            "options": {
                "env": {
                    "GOOS": "linux",
                    "GOARCH": "amd64"
                }
            },
            "command": "go build -o ${workspaceFolder}/bin/ticker ${workspaceFolder}/src/ticker/main.go",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run api/logs",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/src/api/logs"
            },
            "command": "go run main.go",
            "problemMatcher": [],
            "group": {
                "kind": "none",
                "isDefault": true
            }
        }
    ]
}